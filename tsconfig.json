{
    "compilerOptions": {
        "moduleResolution": "node",
        "target": "es5",
        "module": "CommonJS",
        "lib": [
            "esnext"
        ],
        "strict": true,
        "sourceMap": true,
        "declaration": true,
        "allowSyntheticDefaultImports": true,
        "declarationDir": "./dist",
        "outDir": "./dist",
        "typeRoots": [
            "node_modules/@types"
        ],
        "esModuleInterop": true
    },
    "include": [
        "src/**/*.ts",
        "src/*.ts"
    ],
    "exclude": [
        "./node_modules"
    ]
}